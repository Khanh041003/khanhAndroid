<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".detailsUserActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#D8E6AF53"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_backDt"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_back_page" />

        <TextView
            android:id="@+id/tv_title_dat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:layout_toRightOf="@+id/icon_backTT"
            android:gravity="center"
            android:text="Chi tiết Tài khoản người dùng"
            android:textColor="#0B0B0B"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avt_user"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/user_icon"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/tvNameUserDt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quốc huy"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#0221ED"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email :"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#E64A19"/>
        <TextView
            android:id="@+id/tvEmailUserDt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email :"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
          />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SDT :"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#E64A19"/>
        <TextView
            android:id="@+id/tvSdtlUserDt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0987654321"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu :"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#E64A19"/>
        <TextView
            android:id="@+id/tvPasslUserDt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0987654321"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa Chỉ :"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#E64A19"/>
        <TextView
            android:id="@+id/tvAddresslUserDt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0987654321"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới tính :"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#E64A19"/>
        <TextView
            android:id="@+id/tvSexlUserDt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nam"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            />

    </LinearLayout>

</LinearLayout>