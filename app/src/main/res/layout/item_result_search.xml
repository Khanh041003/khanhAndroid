<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

        <ImageView
            android:id="@+id/img_rs_serach"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_giai_tri"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle_rs_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tiêu đề"
                android:textColor="#F11A1A"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDate_rs_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12-12-2922"
                android:textSize="16dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvPrice_rs_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120000"
                    android:textColor="#139EEA"
                    android:textSize="18dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" VND"
                    android:textColor="#139EEA"
                    android:textSize="18dp" />
            </LinearLayout>



        </LinearLayout>



</LinearLayout>