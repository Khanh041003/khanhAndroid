<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".listUserActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#D8E6AF53"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_backTT"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_back_page" />

        <TextView
            android:id="@+id/tv_title_dat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:layout_toRightOf="@+id/icon_backTT"
            android:gravity="center"
            android:text="Danh sách người dùng"
            android:textColor="#0B0B0B"
            android:textSize="20dp"
            android:textStyle="bold" />


    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvListUser"
        android:layout_width="match_parent"
        android:background="#D558A7F4"
        android:layout_height="wrap_content" />

</LinearLayout>