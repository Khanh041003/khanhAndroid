<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account"
    android:orientation="vertical"
    android:background="#ECEBEB"
    >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/Orenge"

        >

        <ImageButton
            android:id="@+id/btn_back_activity_account"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_back_page"
            android:background="@color/trans..."

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin tài khoản"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/black"
            />

    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:background="@color/white"
                android:paddingVertical="20dp"
                >


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_avatar_activity_account"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/user_icon"
                        />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/username_content_activity_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >

                        <TextView
                            android:id="@+id/tv_followers_activity_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:textColor="@color/black"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Người theo dõi"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center"
                            />

                        <TextView
                            android:id="@+id/tv_watching_activity_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="15dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Người theo dõi"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >

                        <TextView
                            android:id="@+id/tv_edit_account_activity_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chỉnh sửa trang cá nhân"
                            android:textSize="12dp"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:background="@drawable/bg_tv_edit_account"
                            />

                        <ImageView

                            android:id="@+id/img_share_acvitity_account"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_more_horiz_24"
                            android:padding="5dp"
                            android:background="@drawable/bg_tv_edit_account"
                            android:layout_marginLeft="10dp"
                            />

                    </LinearLayout>

            </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_1"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@color/white"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_star_outline_24"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đánh giá: "
                        android:textSize="13dp"
                        android:textColor="@color/gray_2"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:id="@+id/tv_judge_activity_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chưa có đánh giá"
                        android:textSize="13dp"
                        android:textColor="@color/gray_2"
                        android:layout_gravity="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_calendar_month_24"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày tham gia: "
                        android:textSize="13dp"
                        android:textColor="@color/gray_2"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:id="@+id/tv_participation_date_activity_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1/1/2022"
                        android:textSize="13dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_location_on_24"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ:  "
                        android:textSize="13dp"
                        android:textColor="@color/gray_2"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:id="@+id/tv_location_activity_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chưa cung cấp"
                        android:textSize="13dp"
                        android:textColor="@color/gray_2"
                        android:layout_gravity="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_chat_24"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phản hồi chat: "
                        android:textSize="13dp"
                        android:textColor="@color/gray_2"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:id="@+id/tv_feedback_message_activity_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chưa có thông tin"
                        android:textSize="13dp"
                        android:textColor="@color/gray_2"
                        android:layout_gravity="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_done_24"
                        android:background="@drawable/bg_tv_edit_account"
                        android:padding="3dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã cung cấp: "
                        android:textSize="13dp"
                        android:textColor="@color/gray_2"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:id="@+id/tv_facebook"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:text="f"
                        android:background="@drawable/bg_tv_edit_account"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="@color/gray_2"
                        />

                    <TextView
                        android:id="@+id/tv_google"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/bg_tv_edit_account"
                        android:gravity="center"
                        android:text="G+"
                        android:textColor="@color/gray_2"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:id="@+id/tv_zalo"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:text="Zalo"
                        android:background="@drawable/bg_tv_edit_account"
                        android:gravity="center"
                        android:textStyle="normal"
                        android:textSize="8dp"
                        android:textColor="@color/gray_2"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        />

                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_1"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tin đang đăng - "
                        android:textColor="@color/black"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_believe_activity_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="normal"
                        android:textSize="13dp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="tin"
                        android:textStyle="normal"
                        android:textSize="13dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="5dp"
                        />

                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_1"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="150dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bạn chưa có tin đăng nào đang bán"
                        android:textColor="@color/gray_1"
                        />

                    <Button
                        android:id="@+id/btn_post_news"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Đăng bán ngay!"
                        android:textColorHint="@color/white"
                        android:textStyle="bold"
                        />

                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_1"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_1"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hồ sơ xin việc"
                        android:textColor="@color/black"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        />

                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_1"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="150dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bạn chưa CV. Tạo CV ngay nhé!"
                        android:textColor="@color/gray_1"
                        />

                    <Button
                        android:id="@+id/btn_job_application"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Tạo hồ sơ xin việc!"
                        android:textColorHint="@color/white"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_1"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>